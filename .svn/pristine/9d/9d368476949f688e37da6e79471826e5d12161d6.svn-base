- (UIView *)selector:(IZValueSelectorView *)valueSelector viewForRowAtIndex:(NSInteger)index {
    UILabel *_rowView = [[UILabel alloc] initWithFrame:CGRectMake(0, 0, _heightPickerView.frame.size.width, 97.0f)];
    
    // set the row label view background color clear
    [_rowView setBackgroundColor:[UIColor clearColor]];
    
    // set row view text, text size, text color and text alignment
    [_rowView setText:[NSString stringWithFormat:@"%@", @(220 - index)]];
    [_rowView setTextColor:NFBlueColor];
    [_rowView setFont:[UIFont boldSystemFontOfSize:68.0f]];
    [_rowView setTextAlignment:NSTextAlignmentCenter];
    
    return _rowView;
}

- (CGRect)rectForSelectionInSelector:(IZValueSelectorView *)valueSelector {
    //
    return CGRectMake(0, (_heightPickerView.frame.size.height - 97.0f) / 2, _heightPickerView.frame.size.width, 97.0f);
    
}

#pragma mark - IZ value selector delegate

- (void)selector:(IZValueSelectorView *)valueSelector didSelectRowAtIndex:(NSInteger)index {
    if (!_isFromSet)
    {
//        [NFUserEntity shareInstance].userHeight = [NSString stringWithFormat:@"%@",@(220 - index)];
        heightStr_ = [NSString stringWithFormat:@"%@",@(220 - index)];
    }
    else
    {
        heightStr_ = [NSString stringWithFormat:@"%@",@(220 - index)];
    }
//    DLog(@"%@",[NFUserEntity shareInstance].userHeight);
    
    // get height changed scroll step
    CGFloat _step = (_heightRulerIndicator.superview.bounds.size.height - _heightRulerIndicator.bounds.size.height) / 110;
    
    // begin the height changed scroll animation
    [UIView beginAnimations:@"heightChangedScrollAnim" context:nil];
    
    // set animation duration and curver
    [UIView setAnimationDuration:0.45f];
    [UIView setAnimationCurve:UIViewAnimationCurveEaseOut];
    
    // change height ruler indicator center
    _heightRulerIndicator.center= CGPointMake(_heightRulerIndicator.center.x, _heightRulerIndicator.bounds.size.height / 2 + index * _step);
    
    // commit the animation
    [UIView commitAnimations];
}

